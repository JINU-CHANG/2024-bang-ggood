{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "jsx": "react",
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
