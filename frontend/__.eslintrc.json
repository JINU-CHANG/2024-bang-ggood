{
  "extends": ["react-app", "eslint:recommended", "plugin:storybook/recommended"],
  "plugins": ["unused-imports"],
  "rules": {
    "no-var": "error",
    "no-multiple-empty-lines": "error",
    "no-console": [
      "error",
      {
        "allow": ["warn", "error", "info"]
      }
    ],
    "eqeqeq": "error",
    "dot-notation": "warn",
    "no-unused-vars": "warn",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "react/no-unknown-property": ["off", { "ignore": ["css"] }],
    "react/react-in-jsx-scope": "off"
  },
  "ignorePatterns": ["dist", "eslint.config.mjs", "webpack.config.js"]
}
